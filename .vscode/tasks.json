{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Release",
            "type": "shell",
            "command": "${config:DEFAULT_PATH}/${config:MAKE_EXE}",
            "args": [
                "release"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compile the project in release."
        },
        {
            "label": "Force Release",
            "type": "shell",
            "command": "${config:DEFAULT_PATH}/${config:MAKE_EXE}",
